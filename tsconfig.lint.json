{
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "baseUrl": "./src",
        "paths": {
            "@services/": ["services/*"],
            "@models/": ["models/*"],
            "@utils/": ["utils/*"],
            "@config": ["utils/config"],
            "@assets/": ["assets/*"],
            "@routes/": ["routes/*"],
            "@middleware/": ["middleware/*"]
        }
    },
    "include": ["src/**/*", "src/**/*.json"],
    "exclude": ["node_modules"]
}